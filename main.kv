#:kivy 2.1.0
<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color
    
<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    padding: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "75dp","75dp"
            source: "img.png"

    MDLabel:
        text: "Kinga App"
        font_style: "Button"
        adaptive_height: True

    MDLabel:
        text: "Check whether you are attractive?"
        font_style: "Caption"
        adaptive_height: True

    ScrollView:
        DrawerList:
            id: md_list

MDScreen:
    MDNavigationLayout:
        ScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'

                    MDToolBar:
                        title: "Navigation Drawe"
                        elevation: 10
                        left_action_item: [['menu', lambda x: nav_drawer.set_state("open")]]

